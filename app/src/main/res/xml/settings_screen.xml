<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="Premium settings"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/pretend_premium_def"
            android:title="Pretend premium user"
            app:iconSpaceReserved="false"
            app:key="@string/pretend_premium" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/enable_read_mode_def"
            android:title="Enable &quot;Read mode&quot;"
            app:iconSpaceReserved="false"
            app:key="@string/enable_read_mode" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/enable_undo_post_def"
            android:title="Enable &quot;Undo post&quot;"
            app:iconSpaceReserved="false"
            app:key="@string/enable_undo_post" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Open &quot;Early access&quot; menu"
            app:iconSpaceReserved="false"
            app:key="@string/early_access_menu_key" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Open &quot;Custom Navigation&quot; menu"
            app:iconSpaceReserved="false"
            app:key="@string/custom_navigation_menu_key" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="Cleanup settings"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/block_retweets_def"
            android:title="Block retweets from followed users"
            app:iconSpaceReserved="false"
            app:key="@string/block_retweets" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/disable_promoted_tweets_def"
            android:title="Disable promoted tweets"
            app:iconSpaceReserved="false"
            app:key="@string/disable_promoted_tweets" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/disable_who_to_follow_def"
            android:title="Disable who to follow"
            app:iconSpaceReserved="false"
            app:key="@string/disable_who_to_follow" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/disable_recommended_users_def"
            android:title="Disable recommended users"
            app:iconSpaceReserved="false"
            app:key="@string/disable_recommended_users" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/disable_pinned_tweets_def"
            android:title="Disable pinned tweets"
            app:iconSpaceReserved="false"
            app:key="@string/disable_pinned_tweets" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/disable_bookmarked_tweets_def"
            android:title="Disable bookmarked tweets"
            app:iconSpaceReserved="false"
            app:key="@string/disable_bookmarked_tweets" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/disable_tweet_detail_related_tweets_def"
            android:title="Disable tweet detail related tweets"
            app:iconSpaceReserved="false"
            app:key="@string/disable_tweet_detail_related_tweets" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/hide_new_tweets_banner_def"
            android:title="Hide &quot;new tweets&quot; banner"
            app:iconSpaceReserved="false"
            app:key="@string/hide_new_tweets_banner" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="Media settings"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/disable_media_warning_def"
            android:title="Disable media warning"
            app:iconSpaceReserved="false"
            app:key="@string/disable_media_warning" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/unprotect_media_def"
            android:title="Disable media download protection"
            app:iconSpaceReserved="false"
            app:key="@string/unprotect_media" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="Mark followed users"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/following_mark_def"
            android:title="Enabled"
            app:iconSpaceReserved="false"
            app:key="@string/following_mark" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@string/following_mark_prefix_def"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Set mark prefix"
            app:iconSpaceReserved="false"
            app:key="@string/following_mark_prefix"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>